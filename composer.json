{
  "name": "s/s",
  "description": "The S project.",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "s",
    "sdotci",
    "s-ci",
    "php-transpiler",
    "oop",
    "scripting-language",
    "blade-template",
    "typesafe",
    "templating-engine",
    "oriented-object-programming",
    "programming-language",
    "binary",
    "fetch",
    "runtime",
    "compiler",
    "parser",
    "compressor",
    "archiver",
    "installer",
    "dotenv",
    "env",
    "ini",
    "ftp-client",
    "ftp-server",
    "put-files",
    "get-files",
    "input",
    "path-parsing",
    "path-parser",
    "query-parsing",
    "query-parser",
    "uri-parsing",
    "uri-parser",
    "output",
    "stream",
    "type",
    "let var",
    "array-config",
    "events",
    "event-listener",
    "event-emitter",
    "emit-event",
    "listen-event",
    "cli-app"
  ],
  "homepage": "https://s.ci",
  "authors": [
    {
      "name": "Sigui Kess√© Emmanuel",
      "email": "siguici@proton.me",
      "homepage": "https://github.com/siguici"
    }
  ],
  "support": {
    "source": "https://github.com/sdotci/s",
    "issues": "https://github.com/sdotci/s/issues",
    "chat": "https://github.com/orgs/sdotci/discussions",
    "wiki": "https://github.com/sdotci/s/wiki"
  },
  "autoload": {
    "psr-4": {
      "S\\": ["src/core/", "src/framework/"],
      "": "src/standard/"
    },
    "files": ["src/core/s.php"]
  },
  "require": {
    "php": "^8.4",
    "ext-readline": "*"
  },
  "replace": {
    "psr/container": "^2.0"
  },
  "require-dev": {
    "siguici/php-devtools": "^1.1"
  },
  "scripts": {
    "analyse": "phpstan analyse --ansi --memory-limit=-1 --debug",
    "check": "pint --test -v",
    "coverage": "pest --coverage",
    "debug": ["@check", "@analyse", "@inspect", "@review", "@test"],
    "fix": ["@refactor", "@format", "@lint"],
    "format": "psalter --issues=all",
    "inspect": "psalm --no-diff",
    "lint": "pint -v",
    "pretest": "psalm-plugin enable psalm/plugin-laravel",
    "retest": "pest --retry",
    "review": "rector --dry-run --debug",
    "refactor": "rector",
    "test": "pest --colors=always"
  },
  "extra": {
    "branch-alias": {
      "dev-main": "0.x-dev"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
